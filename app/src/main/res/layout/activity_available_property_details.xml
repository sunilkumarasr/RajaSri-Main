<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:elevation="@dimen/_5sdp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:visibility="visible"
                    android:id="@+id/backButtonIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/arrow_back_ios_24" />

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="@string/property_details"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/add_location_24"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_availability"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/green">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:fontFamily="sans-serif"
                    android:text="@string/availbelability"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />


            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_8sdp"

            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="@dimen/_2sdp"

                app:strokeColor="@color/text_shadow_white"
               >
                <ImageView
                    android:id="@+id/img_property"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/venture_image_png"
                    android:layout_height="@dimen/_150sdp"/>
            </com.google.android.material.card.MaterialCardView>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_12sdp"
               android:layout_marginHorizontal="@dimen/_16sdp"
               >

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/btn_broucher"
                   android:layout_gravity="right"
                   android:layout_marginLeft="@dimen/_12sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="@dimen/_10sdp"
                   app:cardBackgroundColor="#F80C00"
                   app:cardCornerRadius="@dimen/_5sdp"
                   android:layout_marginBottom="@dimen/_15sdp"
                   app:strokeColor="#F80C00">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_marginHorizontal="@dimen/_10sdp"

                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_margin="@dimen/_4sdp"
                           android:fontFamily="sans-serif"
                           android:text="@string/brochure"
                           android:textColor="@color/white"
                           android:textSize="@dimen/_12ssp"
                           android:textStyle="bold" />
                       <ImageView
                           android:layout_margin="@dimen/_4sdp"
                           android:layout_width="wrap_content"
                           android:src="@drawable/file_download_24"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>
               </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/features"


                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:id="@+id/txt_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/features"
                android:textColor="@color/text_sub_color"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="sans-serif"
                />
<com.google.android.material.divider.MaterialDivider
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"

    app:dividerColor="@color/divider"
    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aminities"

                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:id="@+id/txt_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_sub_color"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="sans-serif"
                />



            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"

                app:dividerColor="@color/divider"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions"

                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_sub_color"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="sans-serif"
                />
               <com.google.android.material.divider.MaterialDivider
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:layout_marginBottom="@dimen/_8sdp"

                   app:dividerColor="@color/divider"
                   />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gallery"

                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"

                />
<LinearLayout
    android:id="@+id/lnr_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:dividerColor="@color/divider"
        />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/video"
                   android:layout_marginTop="@dimen/_12sdp"

                   android:textStyle="bold"
                   android:textSize="@dimen/_14sdp"
                   android:fontFamily="sans-serif"
                   />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:text="@string/no_videos_available"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="@dimen/_2sdp"

            app:strokeColor="@color/grey_font"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_video"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_120sdp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:minHeight="80dp"
                    android:src="@drawable/youtube"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_height="80dp"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</LinearLayout>
               <LinearLayout
                   android:id="@+id/lnr_location"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_marginBottom="@dimen/_40sdp"
                   android:layout_height="wrap_content">
               <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:layout_marginTop="@dimen/_12sdp"

                android:textStyle="bold"
                android:visibility="visible"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/text_shadow_white"
                app:cardCornerRadius="@dimen/_5sdp"
                >
                <WebView
                    android:id="@+id/webview_location"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
               </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>